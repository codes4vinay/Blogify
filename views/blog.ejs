<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
        <title>Blogs</title>

</head>

<body>
    <%- include('./partials/nav') %>
        <div class="container mt-4">
            <h1>
                <%= blog.title %>
            </h1>
            <img src="<%= blog.coverImageURL %>" width="60%" alt="">
            <pre><%= blog.body %></pre>
        </div>

        <div class="container ">
            <img src="<%= blog.createdBy.profileImageUrl %>" width="100px"
                style="border:1px solid blue; border-radius:10%;" alt="">
            <%= blog.createdBy.fullName %>
        </div>

        <%- include('./partials/script') %>
</body>

</html>